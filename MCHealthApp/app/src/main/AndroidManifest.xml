        <activity
            android:name=".CalendarActivity"
            android:label="@string/title_activity_calendar" >
        </activity>
        <activity
            android:name=".ListViewActivity"
            android:label="@string/title_activity_list_view" >
        </activity>
        <activity
            android:name=".PatientChangePassword"
            android:label="@string/title_activity_patient_change_password" >
        </activity>
        <activity
            android:name=".DoctorProfile"
            android:label="@string/title_activity_doctor_profile" >
        </activity>
        <activity
            android:name=".SearchResults"
            android:label="@string/title_activity_your_search_results" >
