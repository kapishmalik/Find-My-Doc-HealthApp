<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="30dp"
    android:orientation="vertical"
    android:background="@color/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:id="@+id/signUpImage"
        android:background="@drawable/clinic"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:textColor="#ffffffff"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="270dp">

        <ScrollView android:layout_height="wrap_content" android:layout_width="fill_parent"
            android:scrollbars="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:orientation="vertical">

                <EditText android:id="@+id/clinicname" android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:hint="@string/prompt_clinic_name"
                    android:imeActionLabel="@string/action_sign_up"
                    android:imeOptions="actionUnspecified"
                    android:maxLines="1" android:singleLine="true"
                    android:layout_marginBottom="20dp"
                    android:textColorHint="@color/white"
                    android:textSize="20sp"
                    android:typeface="serif"
                    android:textColor="@color/white" />

                <EditText android:id="@+id/clinicaddress" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:hint="@string/prompt_clinic_address"
                    android:imeActionLabel="@string/action_sign_up"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textEmailAddress" android:maxLines="1"
                    android:singleLine="true"
                    android:layout_marginBottom="20dp"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:typeface="serif"
                    />

                <EditText android:id="@+id/contact" android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:hint="@string/prompt_clinic_contact"
                    android:imeActionLabel="@string/action_sign_up" android:inputType="number"
                    android:imeOptions="actionUnspecified"
                    android:maxLines="1" android:singleLine="true"
                    android:layout_marginBottom="20dp"
                    android:textColorHint="@color/white"
                    android:textSize="20sp"
                    android:typeface="serif"
                    android:textColor="@color/white" />

                <EditText android:id="@+id/fees" android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:hint="@string/prompt_fees"
                    android:imeActionLabel="@string/action_sign_up" android:inputType="number"
                    android:imeOptions="actionUnspecified"
                    android:maxLines="1" android:singleLine="true"
                    android:layout_marginBottom="20dp"
                    android:textColorHint="@color/white"
                    android:textSize="20sp"
                    android:typeface="serif"
                    android:textColor="@color/white" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="1">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clearClinic"
            android:text="Clear"
            android:layout_marginLeft="10dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textSize="20dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:layout_weight="0.28"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addClinic"
            android:text="ADD"
            android:layout_marginLeft="10dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textSize="20dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:layout_weight="0.28" />


    </LinearLayout>

</LinearLayout>

