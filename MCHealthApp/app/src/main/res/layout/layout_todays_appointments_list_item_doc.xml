<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:src="@mipmap/ic_default_pic"
            android:background="#23C0C5"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#23C0C5"
            android:padding="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clinic- "
                android:id="@+id/textViewID"
                android:textColor="#FFF"
                android:gravity="center"
                android:layout_weight="3"
                android:layout_gravity="top"
                android:textSize="15dp"
                />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient ID"
                android:id="@+id/textViewIDText"
                android:textColor="#FFF"
                android:gravity="center_vertical"
                android:layout_weight="3"
                android:textSize="15dp"
                android:layout_gravity="top"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textViewID"
                android:layout_toEndOf="@+id/textViewID" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient Name"
                android:gravity="center_vertical"
                android:background="#23C0C5"
                android:textColor="#FFF"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:textSize="12dp"
                android:id="@+id/textViewPatNameText"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textViewIDText"
                android:layout_toEndOf="@+id/textViewIDText"
                android:layout_marginLeft="47dp"
                android:layout_marginStart="47dp" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#23C0C5"
        android:padding="4dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="SLOT Date"
            android:id="@+id/textViewSlotDate"
            android:gravity="center"
            android:layout_weight="2"
            android:textSize="15dp"

            android:textColor="#FFF"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="SLOT Time"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#FFF"
            android:id="@+id/textViewSlotTime" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonDone"
            android:layout_weight="1"
            android:background="#23C0C5"
            android:src="@mipmap/ic_done" />


    </LinearLayout>



</LinearLayout>

