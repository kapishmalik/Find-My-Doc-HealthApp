<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#23C0C5"
            android:padding="5dp"
            >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:layout_weight="1"
            android:src="@mipmap/ic_default_pic"
            android:background="#23C0C5"
            />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient Email ID"
                android:textColor="#FFF"
                android:layout_weight="1"
                android:textSize="15dp"
                android:id="@+id/textViewPatNameText"

                 />
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#23C0C5"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clinic- "
                android:id="@+id/textViewID"
                android:textColor="#FFF"
                android:gravity="center"
                android:layout_weight="2"
                android:textSize="15dp"
                />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clinic Name"
                android:id="@+id/textViewIDText"
                android:textColor="#FFF"
                android:layout_weight="1"
                android:textSize="15dp"
                />


        </LinearLayout>


        </LinearLayout>




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#23C0C5"
        android:padding="4dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="SLOT Date"
            android:id="@+id/textViewSlotDate"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15dp"

            android:textColor="#FFF"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="SLOT Time"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#FFF"
            android:id="@+id/textViewSlotTime" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Purpose:-"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#FFF"
            android:id="@+id/textViewPurpose" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Purpose"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#FFF"
            android:id="@+id/textViewPurposeText" />

    </LinearLayout>

    <LinearLayout
        android:background="#23C0C5"
        android:layout_height="30dp" android:layout_width="match_parent">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/buttonApprove"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button"
            android:text="Approve"
            android:layout_weight="1" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Reject"
            android:textColor="@color/white"
            android:id="@+id/buttonReject"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button"/>

    </LinearLayout>>


</LinearLayout>

