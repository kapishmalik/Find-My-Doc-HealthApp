<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView android:id="@+id/item_icon" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" android:adjustViewBounds="true"
        android:maxHeight="80dp" android:maxWidth="80dp" android:src="@mipmap/dr3"/>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="#23C0C5">
        <TextView android:id="@+id/item_txtDoctorName" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Name"
            android:textSize="18dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="sans-serif"
            android:textColor="#ffff"
            android:clickable="true" />

        <TextView android:id="@+id/item_txtSpeciality" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginBottom="16dp"
            android:layout_marginLeft="40dp"
            android:text="Speciality"
            android:textSize="15dp"
            android:fontFamily="sans-serif"
            android:textColor="#ffff"
            android:clickable="true" />

    <TextView android:id="@+id/item_txtCharge" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" android:text="Charges"
        android:textSize="15dp"
        android:fontFamily="sans-serif"
        android:layout_marginLeft="40dp"
        android:clickable="true"
        />

</LinearLayout>
</LinearLayout>

