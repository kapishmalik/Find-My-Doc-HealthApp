<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusable="true"
    android:id="@+id/linearLayout">
    <TextView
        android:id="@+id/item_appoint_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffff"
        android:textAlignment="center"
        android:textSize="15dp"
        android:fontFamily="sans-serif"
        android:textColor="#000000"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#23C0C5"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:background="#23C0C5"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/dr3"
            android:scaleType="centerInside"/>
            <TextView
                android:id="@+id/item_txtDoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="05dp"
                android:textSize="12dp"
                android:fontFamily="sans-serif"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="320dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="02dp"
            android:background="#23C0C5"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="25dp">
            <ImageView
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:background="#23C0C5"
                android:src="@mipmap/clinic"
                android:scaleType="centerInside" />
            <TextView
                android:id="@+id/item_txtclinic"
                android:layout_height="20dp"
                android:layout_width="300dp"
                android:textSize="15dp"
                android:background="#21ACB1"
                android:textColor="#ffff"
                android:fontFamily="Sans Serif"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="25dp">
                <ImageView
                    android:layout_height="20dp"
                    android:layout_width="20dp"
                    android:background="#23C0C5"
                    android:src="@mipmap/purpose"
                    android:scaleType="centerInside" />
                <TextView
                    android:id="@+id/item_txtPurpose"
                    android:layout_height="20dp"
                    android:layout_width="300dp"
                    android:textSize="15dp"
                    android:background="#21ACB1"
                    android:textColor="#ffff"
                    android:fontFamily="Sans Serif"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="25dp">
                <ImageView
                    android:layout_height="20dp"
                    android:layout_width="20dp"
                    android:background="#23C0C5"
                    android:src="@mipmap/calendar"
                    android:scaleType="centerInside" />
                <TextView
                    android:id="@+id/item_txtcalendar"
                    android:layout_height="20dp"
                    android:layout_width="300dp"
                    android:textSize="15dp"
                    android:background="#21ACB1"
                    android:textColor="#ffff"
                    android:fontFamily="Sans Serif"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="25dp">
                <ImageView
                    android:layout_height="20dp"
                    android:layout_width="20dp"
                    android:background="#23C0C5"
                    android:src="@mipmap/status"
                    android:scaleType="centerInside" />
                <TextView
                    android:id="@+id/item_txtstatus"
                    android:layout_height="20dp"
                    android:layout_width="300dp"
                    android:textSize="15dp"
                    android:background="#21ACB1"
                    android:textColor="#ffff"
                    android:fontFamily="Sans Serif"/>
            </LinearLayout>

    </LinearLayout>
    </LinearLayout>
    <LinearLayout

        android:layout_height="30dp"
        android:layout_width="fill_parent"
        android:background="#23C0C5"
        android:orientation="horizontal">

        <Button
            android:text="Reschedule"
            android:textSize="15dp"
            android:background="@drawable/button"
            android:layout_width="175dp"
            android:layout_height="25dp"
            android:textAlignment="center"
            android:layout_marginLeft="05dp"
            android:layout_marginTop="03dp"
            android:textColor="#ffff"
            android:fontFamily="Sans Serif"
            android:id="@+id/btnReschedule" />
        <Button
            android:text="Cancel"
            android:textSize="15dp"
            android:background="@drawable/button"
            android:layout_width="175dp"
            android:layout_height="25dp"
            android:textAlignment="center"
            android:layout_marginTop="03dp"
            android:textColor="#ffff"
            android:fontFamily="Sans Serif"
            android:id="@+id/buttonCancel"
            android:layout_marginRight="05dp" />
    </LinearLayout>
</LinearLayout>
